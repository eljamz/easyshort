<div class="page-header">
	<h2><span class="label label-info">Log in</span></h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><p><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, :class => "form-control form-control-size-fix" %></p></div>

  <div><p><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control form-control-size-fix" %></p></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><p><%= f.submit "Log in", :class => "btn btn-sm btn-success" %></p></div>
<% end %>

<%= render "devise/shared/links" %>
