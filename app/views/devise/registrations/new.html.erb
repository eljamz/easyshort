<div class="page-header">
	<h2><span class="label label-info">Register</span></h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><p><%= f.label :fullname %><br />
  <%= f.text_field :fullname, autofocus: true, :class => "form-control form-control-size-fix" %></p></div>

  <div><p><%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control form-control-size-fix" %></p></div>

  <div><p><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control form-control-size-fix" %></p></div>

  <div><p><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control form-control-size-fix" %></p></div>

  <div><p><%= f.submit "Sign up", :class => "btn btn-sm btn-success" %></p></div>
<% end %>

<%= render "devise/shared/links" %>
